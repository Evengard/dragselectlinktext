{
  "name": "dragselectlinktext",
  "title": "Drag-Select Link Text",
  "id": "dragselectlinktext@kestrel",
  "description": "Select link text with easy drag gestures.",
  "author": "Kestrel",
  "license": "MPL-2.0",
  "version": "1.4.1",
  "icon": "icon.png",
  "main": "index.js",
  "engines": {
    "firefox": ">=38.0a1",
    "seamonkey": ">=2.32"
  },
  "keywords": [
    "jetpack"
  ],
  "permissions": {
    "private-browsing": true,
    "multiprocess": true
  },
  "preferences": [{
      "name": "selectGesture",
      "type": "radio",
      "title": "Selection drag gesture",
      "value": "horizontalSelect",
      "options": [
          {
              "value": "horizontalSelect",
              "label": "Horizontal"
          },
          {
              "value": "holdSelect",
              "label": "Hold"
          },
          {
              "value": "immediateSelect",
              "label": "Immediate"
          }
      ]
    },
    {
        "name": "holdTimeMS",
        "title": "Hold time (milliseconds)",
        "type": "integer",
        "value": 300
    },    
    {
        "name": "dragThresholdX",
        "title": "Horizontal drag threshold (pixels)",
        "type": "integer",
        "value": 5
    },
    {
        "name": "dragThresholdY",
        "title": "Vertical drag threshold (pixels)",
        "type": "integer",
        "value": 5
    },
    {
        "name": "changeCursor",
        "title": "Change cursor",
        "type": "bool",
        "value": true
    },
    {
        "name": "overrideUnselectable",
        "title": "Override unselectable text",
        "type": "bool",
        "value": false
    }]
}
